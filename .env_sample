# Local paths
data_root_dir=./data

# Azure AI Search
search_service_name=<your-search-service-name>
search_admin_key=<your-search-admin-key>
search_index_name=finance-pro
search_index_schema_file=schema.json
search_api_version=2023-10-01-Preview

# Azure Storage (for source documents)
blob_service_name=<your-storage-account-name>
blob_container=<your-container-name>
blob_key=<your-storage-account-key>

# Azure OpenAI
openai_api_base=https://<your-azure-openai-resource>.openai.azure.com/
openai_api_key=<your-azure-openai-key>
openai_api_version=2023-05-15
openai_embedding_model=<your-embedding-deployment>          # e.g., text-embedding-3-large
openai_gpt_model=<your-chat-deployment>                     # e.g., gpt-4.1

# Azure Document Intelligence
doc_intelligence_endpoint=https://<your-doc-intelligence>.cognitiveservices.azure.com/
doc_intelligence_apim_key=<your-doc-intelligence-key>

# Azure AI Project (for agents)
MODEL_DEPLOYMENT_NAME=<your-model-deployment-name>          # same as your deployed chat model
PROJECT_ENDPOINT=https://<your-project-endpoint>/api/projects/<your-project-name-or-id>

# Optional: override or create AI Search connection in the project
AZURE_AI_SEARCH_CONNECTION_ID=<optional-existing-connection-id>
AZURE_AI_SEARCH_CONNECTION_NAME=ai-search-conn